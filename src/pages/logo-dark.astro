---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Softylus Dark Logo">
  <section class="min-h-screen bg-black flex flex-col items-center justify-center p-8 relative overflow-hidden">
    <!-- Luxury Background Effects -->
    <div class="absolute inset-0 pointer-events-none">
      <!-- Subtle gradient overlay -->
      <div class="absolute inset-0 bg-gradient-radial from-black via-[#111] to-black opacity-80"></div>
      
      <!-- Animated grid pattern -->
      <div class="absolute inset-0 opacity-[0.02]">
        <div class="absolute inset-0 bg-grid-pattern transform -skew-y-6"></div>
      </div>
      
      <!-- Floating elements -->
      <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-white/[0.02] rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/3 left-1/3 w-[32rem] h-[32rem] bg-white/[0.01] rounded-full blur-3xl"></div>
    </div>

    <!-- Logo Container -->
    <div class="premium-logo-container dark" data-aos="fade-up">
      <!-- Logo Wrapper with Premium Effects -->
      <div class="logo-wrapper">
        <!-- Premium Logo Symbol -->
        <div class="logo-symbol">
          <div class="symbol-outer-ring"></div>
          <div class="symbol-inner-ring"></div>
          <div class="symbol-diamond"></div>
          <div class="symbol-dot"></div>
        </div>
        
        <!-- Refined Logo Typography -->
        <div class="logo-text-container">
          <div class="text-divider"></div>
          <div class="logo-text-group">
            <span class="logo-letter letter-s">S</span>
            <span class="logo-letter letter-o">O</span>
            <span class="logo-letter letter-f">F</span>
            <span class="logo-letter letter-t">T</span>
            <span class="logo-letter letter-y">Y</span>
            <span class="logo-letter letter-l">L</span>
            <span class="logo-letter letter-u">U</span>
            <span class="logo-letter letter-s2">S</span>
          </div>
          <!-- Sophisticated Underline Effect -->
          <div class="logo-underline-effect">
            <div class="logo-underline-track"></div>
            <div class="logo-underline-progress"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Slogan -->
    <div class="slogan-container" data-aos="fade-up" data-aos-delay="200">
      <div class="slogan-text">Digital Reality Architect</div>
      <div class="slogan-line"></div>
    </div>
  </section>
</Layout>

<style>
  /* Background Pattern */
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(255,255,255,0.03) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255,255,255,0.03) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  /* Logo Container */
  .premium-logo-container {
    display: flex;
    flex-direction: column;
    font-size: 10rem;
    padding: 2rem 0;
    transform-style: preserve-3d;
    perspective: 1000px;
    position: relative;
    transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
    margin-bottom: 4rem;
  }
  
  .logo-wrapper {
    transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
    height: 255px;
    padding: 0 4px;
    position: relative;
    transform-style: preserve-3d;
    display: flex;
    align-items: center;
  }
  
  /* Refined Logo Symbol */
  .logo-symbol {
    position: relative;
    width: 215px;
    height: 215px;
    margin-right: 80px;
    transform-style: preserve-3d;
  }
  
  .symbol-outer-ring {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 8px solid rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    box-shadow: 0 0 30px rgba(255, 255, 255, 0.1);
  }
  
  .symbol-inner-ring {
    position: absolute;
    top: 22%;
    left: 22%;
    width: 56%;
    height: 56%;
    border: 6px solid rgba(255, 255, 255, 0.85);
    border-radius: 50%;
  }
  
  .symbol-diamond {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 28%;
    height: 28%;
    background-color: white;
    transform: translate(-50%, -50%) rotate(45deg);
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
  }
  
  .symbol-dot {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 10%;
    height: 10%;
    background-color: black;
    border-radius: 50%;
    transform: translate(-50%, -50%);
  }
  
  /* Refined Typography */
  .logo-text-container {
    position: relative;
    display: flex;
    padding-left: 67px;
    height: 100%;
    transform-style: preserve-3d;
  }
  
  .text-divider {
    position: absolute;
    left: -34px;
    top: 15%;
    height: 70%;
    width: 2px;
    background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.2), transparent);
    opacity: 0.8;
  }
  
  .logo-text-group {
    display: flex;
    align-items: center;
    letter-spacing: -0.02em;
  }
  
  .logo-letter {
    font-family: 'Montserrat', sans-serif;
    font-weight: 300;
    color: white;
    text-shadow: 0 0 30px rgba(255, 255, 255, 0.2);
  }
  
  /* Refined underline */
  .logo-underline-effect {
    position: absolute;
    bottom: 8px;
    left: 67px;
    width: calc(100% - 67px);
    height: 2px;
    transform-style: preserve-3d;
  }
  
  .logo-underline-track {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.1);
  }
  
  .logo-underline-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(
      to right,
      rgba(255, 255, 255, 0.8),
      rgba(255, 255, 255, 1) 50%,
      rgba(255, 255, 255, 0.8) 100%
    );
    transform: translateZ(15px);
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
  }

  /* Refined Slogan */
  .slogan-container {
    margin-top: 3rem;
    text-align: center;
    opacity: 0;
    animation: fadeIn 1s cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
    animation-delay: 0.5s;
  }

  .slogan-text {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.5rem;
    font-weight: 300;
    color: white;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    margin-bottom: 1.5rem;
    text-shadow: 0 0 30px rgba(255, 255, 255, 0.2);
  }

  .slogan-line {
    width: 0;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      rgba(255, 255, 255, 0.9),
      transparent
    );
    margin: 0 auto;
    animation: expandLine 1.5s cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
    animation-delay: 1s;
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes expandLine {
    from { width: 0; }
    to { width: 200px; }
  }

  /* Responsive adjustments */
  @media (max-width: 1280px) {
    .premium-logo-container {
      font-size: 8rem;
    }
    
    .logo-wrapper {
      height: 204px;
    }
    
    .logo-symbol {
      width: 172px;
      height: 172px;
      margin-right: 64px;
    }
  }
  
  @media (max-width: 768px) {
    .premium-logo-container {
      font-size: 5rem;
    }
    
    .logo-wrapper {
      height: 127px;
    }
    
    .logo-symbol {
      width: 108px;
      height: 108px;
      margin-right: 40px;
    }
    
    .text-divider {
      left: -25px;
      width: 1px;
    }
    
    .slogan-text {
      font-size: 1rem;
      letter-spacing: 0.2em;
    }
  }
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .premium-logo-container,
    .logo-wrapper,
    .logo-symbol,
    .logo-letter,
    .logo-underline-progress {
      transition: none;
    }

    .slogan-container {
      opacity: 1;
      transform: none;
      animation: none;
    }

    .slogan-line {
      width: 200px;
      animation: none;
    }
  }
</style>