<style>
  /* Immersive Space */
  .signature-space {
    min-height: 100vh;
    background: black;
    position: relative;
    overflow: hidden;
    perspective: 1000px;
  }

  /* Neural Network Background */
  .neural-network {
    position: absolute;
    inset: -50%;
    background-image: radial-gradient(circle at 30% 20%, rgba(255,255,255,0.1) 1px, transparent 1px),
                      radial-gradient(circle at 70% 80%, rgba(255,255,255,0.1) 1px, transparent 1px);
    background-size: 100px 100px;
    animation: networkFloat 20s linear infinite;
    opacity: 0.3;
  }

  @keyframes networkFloat {
    0% { transform: translate(0, 0) rotate(0deg); }
    100% { transform: translate(-50px, -50px) rotate(1deg); }
  }

  /* Floating Particles */
  .particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .particles::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 50% 50%, white 1px, transparent 1px);
    background-size: 50px 50px;
    animation: particleFloat 15s linear infinite;
    opacity: 0.1;
  }

  @keyframes particleFloat {
    0% { transform: translateY(0); }
    100% { transform: translateY(-50px); }
  }

  /* DNA Helix */
  .dna-helix {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 400px;
    transform: translateY(-50%);
    perspective: 1000px;
  }

  .dna-strand {
    position: absolute;
    width: 100%;
    height: 20px;
    animation: dnaRotate 4s linear infinite;
    animation-delay: var(--delay);
  }

  .dna-base {
    position: absolute;
    width: 4px;
    height: 4px;
    background: white;
    border-radius: 50%;
    opacity: 0.2;
  }

  .dna-base.left { left: 40%; }
  .dna-base.right { right: 40%; }

  @keyframes dnaRotate {
    0% { transform: rotateX(0deg); }
    100% { transform: rotateX(360deg); }
  }

  /* Quantum Card */
  .quantum-card {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
    padding: 3rem;
    background: rgba(255,255,255,0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 1rem;
    transform-style: preserve-3d;
    animation: cardFloat 6s ease-in-out infinite;
  }

  @keyframes cardFloat {
    0%, 100% { transform: translate3d(0, 0, 0) rotate3d(1, 1, 0, 0deg); }
    50% { transform: translate3d(0, -20px, 50px) rotate3d(1, 1, 0, 2deg); }
  }

  /* Brand Mark */
  .brand-mark {
    width: 120px;
    height: 120px;
    position: relative;
    margin: 0 auto 3rem;
  }

  .quantum-ring {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
  }

  .quantum-particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: white;
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform-origin: 0 0;
    animation: particleOrbit 4s linear infinite;
    animation-delay: var(--delay);
  }

  @keyframes particleOrbit {
    from { transform: rotate(var(--angle)) translateX(60px) rotate(calc(var(--angle) * -1)); }
    to { transform: rotate(calc(var(--angle) + 360deg)) translateX(60px) rotate(calc((var(--angle) + 360deg) * -1)); }
  }

  .quantum-core {
    position: absolute;
    inset: 25%;
    border-radius: 50%;
    background: rgba(255,255,255,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    animation: corePulse 2s ease-in-out infinite;
  }

  .core-diamond {
    width: 40%;
    height: 40%;
    background: white;
    transform: rotate(45deg);
  }

  .core-pulse {
    position: absolute;
    inset: -20%;
    border: 2px solid white;
    border-radius: 50%;
    opacity: 0;
    animation: pulseOut 2s ease-out infinite;
  }

  @keyframes corePulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  @keyframes pulseOut {
    0% { transform: scale(0.8); opacity: 0.5; }
    100% { transform: scale(1.5); opacity: 0; }
  }

  /* Neural Typography */
  .neural-type {
    text-align: center;
    margin-bottom: 3rem;
  }

  .glitch-text {
    font-size: 3rem;
    font-weight: bold;
    color: white;
    position: relative;
    animation: glitchText 3s infinite;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    clip: rect(0, 0, 0, 0);
  }

  .glitch-text::before {
    left: 2px;
    text-shadow: -1px 0 #ff0080;
    animation: glitch-1 2s infinite linear alternate-reverse;
  }

  .glitch-text::after {
    left: -2px;
    text-shadow: 2px 0 #00ff00;
    animation: glitch-2 3s infinite linear alternate-reverse;
  }

  @keyframes glitchText {
    0%, 100% { text-shadow: 0 0 10px rgba(255,255,255,0.8); }
    50% { text-shadow: 0 0 20px rgba(255,255,255,0.8), 0 0 30px rgba(255,255,255,0.4); }
  }

  .quantum-title {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255,255,255,0.7);
    display: block;
    margin-top: 1rem;
  }

  .quantum-line {
    width: 0;
    height: 1px;
    background: linear-gradient(to right, transparent, white, transparent);
    margin: 0.5rem auto 0;
    animation: lineExpand 1.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  @keyframes lineExpand {
    to { width: 200px; }
  }

  /* Contact Matrix */
  .contact-matrix {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .matrix-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: white;
    text-decoration: none;
    padding: 0.5rem;
    background: rgba(255,255,255,0.03);
    border-radius: 0.5rem;
    transition: all 0.3s ease;
  }

  .matrix-link:hover {
    background: rgba(255,255,255,0.1);
    transform: translateX(10px);
  }

  .matrix-icon {
    width: 2.5rem;
    height: 2.5rem;
    position: relative;
  }

  .icon-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2px;
    width: 100%;
    height: 100%;
  }

  .icon-cell {
    background: rgba(255,255,255,0.2);
    animation: cellPulse 2s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  @keyframes cellPulse {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 1; }
  }

  .matrix-text {
    font-size: 0.875rem;
    color: rgba(255,255,255,0.8);
  }

  /* Quantum Social */
  .quantum-social {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  .quantum-website {
    position: relative;
    color: white;
    text-decoration: none;
    font-size: 0.875rem;
  }

  .website-particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .website-particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: white;
    border-radius: 50%;
    opacity: 0;
    animation: particleFloat 2s ease-out infinite;
    animation-delay: var(--delay);
  }

  .quantum-separator {
    position: relative;
    width: 1px;
    height: 20px;
  }

  .separator-line {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent, white, transparent);
  }

  .separator-dot {
    position: absolute;
    width: 4px;
    height: 4px;
    background: white;
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: dotPulse 2s ease-in-out infinite;
  }

  .quantum-icons {
    display: flex;
    gap: 1rem;
  }

  .quantum-icon {
    position: relative;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon-frame {
    position: absolute;
    inset: 0;
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 0.25rem;
    transition: all 0.3s ease;
  }

  .quantum-icon:hover .icon-frame {
    border-color: white;
    transform: rotate(45deg);
  }

  .icon-svg {
    width: 1.25rem;
    height: 1.25rem;
    fill: white;
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .quantum-icon:hover .icon-svg {
    opacity: 1;
    transform: scale(1.1);
  }

  /* Copy Interface */
  .copy-interface {
    text-align: center;
    margin-top: 3rem;
  }

  .copy-button {
    position: relative;
    padding: 1rem 2rem;
    background: white;
    color: black;
    font-weight: 500;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    overflow: hidden;
  }

  .button-content {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    z-index: 1;
  }

  .button-particles {
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent 0%, rgba(255,255,255,0.1) 50%, transparent 100%);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .copy-button:hover .button-particles {
    transform: translateX(100%);
  }

  .button-icon {
    width: 1.25rem;
    height: 1.25rem;
    stroke: currentColor;
    stroke-width: 2;
    transition: transform 0.3s ease;
  }

  .copy-button:hover .button-icon {
    transform: translateX(3px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .quantum-card {
      padding: 2rem;
      margin: 1rem;
    }

    .brand-mark {
      width: 80px;
      height: 80px;
    }

    .glitch-text {
      font-size: 2rem;
    }

    .quantum-social {
      flex-direction: column;
      gap: 1rem;
    }

    .quantum-separator {
      width: 100px;
      height: 1px;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .neural-network,
    .particles,
    .dna-strand,
    .quantum-card,
    .quantum-particle,
    .core-pulse,
    .glitch-text,
    .button-particles {
      animation: none;
    }

    .matrix-link:hover {
      transform: none;
    }

    .quantum-icon:hover .icon-frame {
      transform: none;
    }

    .quantum-icon:hover .icon-svg {
      transform: none;
    }
  }
</style>

