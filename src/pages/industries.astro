import Layout from '../layouts/Layout.astro';
import { siteContent } from '@lib/content';
import Section from '../components/ui/Section.astro';
import IndustryCard from '../components/industries/IndustryCard.astro';

const { industries } = siteContent;

<Layout title="Industries We Serve | Softylus">
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-4 relative overflow-hidden">
      <div class="container mx-auto">
        <div class="max-w-4xl" data-aos="fade-up">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold leading-tight mb-6">
            Industries We <br/>
            <span class="relative inline-block">
              Transform
              <svg class="absolute w-full bottom-1 left-0 -z-10" height="10" viewBox="0 0 200 10" xmlns="http://www.w3.org/2000/svg">
                <path d="M0,5 Q40,0 80,5 T160,5 T240,5" stroke="rgba(0,0,0,0.3)" stroke-width="2" fill="none"/>
              </svg>
            </span>
          </h1>

          <p class="text-xl text-gray-600 mb-8 max-w-2xl" data-aos="fade-up" data-aos-delay="100">
            {industries.section.description}
          </p>

          <!-- Stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-12" data-aos="fade-up" data-aos-delay="200">
            <div class="stat-item">
              <div class="text-3xl font-display font-bold mb-2">15+</div>
              <div class="text-sm text-gray-600">Industries Served</div>
            </div>
            <div class="stat-item">
              <div class="text-3xl font-display font-bold mb-2">127+</div>
              <div class="text-sm text-gray-600">Projects Delivered</div>
            </div>
            <div class="stat-item">
              <div class="text-3xl font-display font-bold mb-2">98%</div>
              <div class="text-sm text-gray-600">Client Satisfaction</div>
            </div>
            <div class="stat-item">
              <div class="text-3xl font-display font-bold mb-2">8+</div>
              <div class="text-sm text-gray-600">Years Experience</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Industries Grid -->
    <Section
      contentKey="industries-grid"
      background="white"
      padding="lg"
      class="py-24"
    >
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {industries.items.map((industry, index) => (
            <IndustryCard
              title={industry.title}
              description={industry.description}
              icon={industry.icon}
              delay={index * 100}
            />
          ))}
        </div>
      </div>
    </Section>

    <!-- CTA Section -->
    <Section
      contentKey="industries-cta"
      background="gray"
      padding="lg"
      class="py-24"
    >
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl font-display font-bold mb-6" data-aos="fade-up">
            Ready to Transform Your Industry?
          </h2>
          <p class="text-xl text-gray-600 mb-8" data-aos="fade-up" data-aos-delay="100">
            Let's discuss how we can help you innovate and stay ahead of the competition.
          </p>
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-black hover:bg-gray-800 transition-colors duration-200 rounded-full"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            Get Started
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </Section>
  </main>
</Layout>

<style>
  .stat-item {
    text-align: center;
    padding: 1.5rem;
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  @media (prefers-reduced-motion: no-preference) {
    .stat-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }
  }
</style> 