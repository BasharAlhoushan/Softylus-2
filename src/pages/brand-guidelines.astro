---
import Layout from '../layouts/Layout.astro';
import BrandHero from '../components/brand/BrandHero.astro';
import BrandTableOfContents from '../components/brand/BrandTableOfContents.astro';
import BrandLogo from '../components/brand/BrandLogo.astro';
import BrandColors from '../components/brand/BrandColors.astro';
import BrandTypography from '../components/brand/BrandTypography.astro';
import BrandImagery from '../components/brand/BrandImagery.astro';
import BrandVoice from '../components/brand/BrandVoice.astro';
import BrandComponents from '../components/brand/BrandComponents.astro';
---

<Layout title="Brand Guidelines - Softylus">
  <div class="brand-guidelines">
    <BrandHero />
    <BrandTableOfContents />
    <BrandLogo />
    <BrandColors />
    <BrandTypography />
    <BrandImagery />
    <BrandVoice />
    <BrandComponents />
  </div>
</Layout>

<style>
  /* Improved section spacing and transitions */
  .brand-guidelines {
    scroll-behavior: smooth;
    scroll-padding-top: 80px; /* Account for fixed header */
  }

  /* Global section styles */
  :global(section) {
    position: relative;
    overflow: hidden;
    padding: 6rem 0;
  }

  :global(section:nth-child(even)) {
    background-color: var(--color-gray-50);
  }

  /* Section headers */
  :global(.section-header) {
    position: relative;
    padding-left: 3rem;
    margin-bottom: 3rem;
  }

  :global(.section-number) {
    position: absolute;
    left: 0;
    top: 0.5rem;
    font-family: 'Playfair Display', serif;
    font-size: 1rem;
    font-weight: 600;
    color: rgba(0, 0, 0, 0.4);
  }

  :global(.section-title) {
    font-size: 2.25rem;
    font-weight: 700;
    font-family: 'Playfair Display', serif;
    line-height: 1.2;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    :global(section) {
      padding: 4rem 0;
    }

    :global(.section-header) {
      padding-left: 2.5rem;
      margin-bottom: 2rem;
    }

    :global(.section-title) {
      font-size: 1.875rem;
    }
  }

  /* Print styles */
  @media print {
    .brand-guidelines {
      scroll-behavior: auto;
    }

    :global(section) {
      page-break-inside: avoid;
      padding: 2rem 0;
    }
  }
</style>