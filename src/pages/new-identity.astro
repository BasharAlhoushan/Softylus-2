<style>
  /* Background Pattern */
  .bg-grid-pattern {
    background-image:
      linear-gradient(to right, rgba(255,255,255,0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255,255,255,0.05) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  /* Swipe Indicator */
  .swipe-text {
    position: relative;
    display: inline-block;
  }

  .swipe-line {
    width: 60px;
    height: 2px;
    background: linear-gradient(to right, transparent, white, transparent);
    margin: 0 auto;
    animation: swipeLine 2s ease-in-out infinite;
  }

  @keyframes swipeLine {
    0% { transform: translateX(-30px); opacity: 0; }
    50% { transform: translateX(30px); opacity: 1; }
    100% { transform: translateX(90px); opacity: 0; }
  }

  /* Feature Items */
  .feature-item {
    display: flex;
    align-items: start;
    transition: transform 0.3s ease;
  }

  .feature-item:hover {
    transform: translateX(10px);
  }

  /* Text Reveal Animation */
  .reveal-text {
    overflow: hidden;
  }

  .reveal-child {
    opacity: 0;
    transform: translateY(20px);
    animation: revealText 0.8s cubic-bezier(0.215, 0.61, 0.355, 1) forwards;
  }

  .animation-delay-200 { animation-delay: 200ms; }
  .animation-delay-400 { animation-delay: 400ms; }
  .animation-delay-500 { animation-delay: 500ms; }
  .animation-delay-600 { animation-delay: 600ms; }

  @keyframes revealText {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Progress Dots */
  .progress-dot.active {
    background-color: white;
    transform: scale(1.2);
  }

  /* Animations */
  .animate-spin-slow {
    animation: spin 8s linear infinite;
  }

  .animate-pulse-slow {
    animation: pulseSlow 3s ease-in-out infinite;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @keyframes pulseSlow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  @keyframes float {
    0%, 100% { transform: rotate(45deg) translateY(0); }
    50% { transform: rotate(45deg) translateY(-20px); }
  }

  /* Complete Symbol Container */
  .complete-symbol-container {
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
    aspect-ratio: 1;
    position: relative;
  }

  .symbol-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    transform-style: preserve-3d;
    perspective: 1000px;
  }

  .symbol-container {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    animation: symbolFloat 6s ease-in-out infinite;
  }

  .symbol-outer-ring {
    position: absolute;
    inset: 0;
    border: 12px solid white;
    border-radius: 50%;
    box-shadow: 0 0 40px rgba(255, 255, 255, 0.2);
    animation: pulseRing 3s ease-in-out infinite;
  }

  .symbol-inner-ring {
    position: absolute;
    top: 22%;
    left: 22%;
    width: 56%;
    height: 56%;
    border: 8px solid white;
    border-radius: 50%;
    animation: rotateRing 8s linear infinite;
  }

  .symbol-diamond {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 28%;
    height: 28%;
    background: white;
    transform: translate(-50%, -50%) rotate(45deg);
    animation: floatDiamond 4s ease-in-out infinite;
  }

  .symbol-inner-circle {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 33.33%;
    height: 33.33%;
    background: black;
    border-radius: 50%;
    transform: translate(-50%, -50%);
  }

  /* Typography Container */
  .typography-container {
    margin-top: 4rem;
  }

  .text-container {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 2rem;
  }

  .text-divider {
    width: 2px;
    height: 80%;
    background: linear-gradient(to bottom, transparent, white, transparent);
    margin-right: 2rem;
    opacity: 0.5;
  }

  .text-group {
    display: flex;
    gap: 0.5rem;
  }

  .text-letter {
    font-family: 'Montserrat', sans-serif;
    font-size: 5rem;
    color: white;
    opacity: 0;
    transform: translateY(20px);
    animation: revealLetter 0.5s cubic-bezier(0.23, 1, 0.32, 1) forwards;
  }

  .text-letter:nth-child(1) { animation-delay: 0.1s; }
  .text-letter:nth-child(2) { animation-delay: 0.2s; }
  .text-letter:nth-child(3) { animation-delay: 0.3s; }
  .text-letter:nth-child(4) { animation-delay: 0.4s; }
  .text-letter:nth-child(5) { animation-delay: 0.5s; }
  .text-letter:nth-child(6) { animation-delay: 0.6s; }
  .text-letter:nth-child(7) { animation-delay: 0.7s; }
  .text-letter:nth-child(8) { animation-delay: 0.8s; }

  .text-underline {
    position: absolute;
    bottom: 1rem;
    left: 4rem;
    right: 0;
    height: 2px;
    background: linear-gradient(to right, transparent, white, transparent);
    transform: scaleX(0);
    animation: expandUnderline 0.8s cubic-bezier(0.23, 1, 0.32, 1) forwards 1s;
  }

  /* Slogan Container */
  .slogan-container {
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
    animation-delay: 1.2s;
  }

  .slogan-text {
    font-family: 'Montserrat', sans-serif;
    font-size: 2rem;
    font-weight: 300;
    color: white;
    letter-spacing: 0.2em; /* Fixed typo here */
    text-transform: uppercase;
    margin-bottom: 2rem;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
  }

  @keyframes symbolFloat {
    0%, 100% { transform: translateY(0) rotate(0); }
    50% { transform: translateY(-20px) rotate(5deg); }
  }

  @keyframes pulseRing {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.05); opacity: 0.8; }
  }

  @keyframes rotateRing {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

