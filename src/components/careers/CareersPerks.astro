---

<section class="py-24 px-4 bg-white">
  <div class="container mx-auto">
    <div class="max-w-3xl mx-auto text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">Perks & Benefits</h2>
      <p class="text-xl text-gray-600">
        We believe in taking care of our team with comprehensive benefits that matter.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {perks.map((perk, index) => (
        <div 
          class="perk-card" 
          data-aos="fade-up" 
          data-aos-delay={100 + index * 50}
        >
          <div class="perk-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={perk.icon} />
            </svg>
          </div>
          <h3 class="perk-title">{perk.title}</h3>
          <p class="perk-description">{perk.description}</p>
          <div class="perk-progress"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .perk-card {
    background: white;
    padding: 2rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .perk-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .perk-icon {
    width: 3rem;
    height: 3rem;
    background: black;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .perk-card:hover .perk-icon {
    transform: rotate(10deg);
  }

  .perk-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: black;
  }

  .perk-description {
    font-size: 0.95rem;
    color: rgba(0, 0, 0, 0.7);
    line-height: 1.6;
  }
</style>