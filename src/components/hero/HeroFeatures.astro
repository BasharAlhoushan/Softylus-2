const features = [
  {
    title: "Neuro-Adaptive",
    description: "Systems that evolve with human interaction",
    icon: "M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"
  },
  {
    title: "Dimensional",
    description: "Multi-layered experiential depth",
    icon: "M13 10V3L4 14h7v7l9-11h-7z"
  },
  {
    title: "Quantum-Guided",
    description: "Probabilistic intelligence systems",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
  },
  {
    title: "Polymorphic",
    description: "Self-evolving security protocols",
    icon: "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
  }
