---
import FluidShape from "./FluidShape.astro";
import FeaturedProjects from "./FeaturedProjects.astro";
---

<div class="hero-visual" data-aos="fade-up" data-aos-duration="800">
  <!-- Dynamic background -->
  <div class="dynamic-bg">
    <div class="grid-overlay"></div>
    <div class="gradient-sphere"></div>
    <div class="floating-elements" aria-hidden="true">
      <div class="floating-element" data-speed="1"></div>
      <div class="floating-element" data-speed="1.5"></div>
      <div class="floating-element" data-speed="0.8"></div>
    </div>
  </div>

  <!-- Main content container -->
  <div class="content-container">
    <!-- Creative frame -->
    <div class="creative-frame">
      <div class="frame-line top"></div>
      <div class="frame-line right"></div>
      <div class="frame-line bottom"></div>
      <div class="frame-line left"></div>
      
      <!-- Content -->
      <div class="content">
        <div class="header">
          <div class="label-container">
            <span class="label">DIGITAL REALITY</span>
            <div class="label-line"></div>
          </div>
        </div>

        <div class="title-section">
          <h3 class="title">Computational<br/>Excellence</h3>
          <p class="description">Where innovation meets precision in digital architecture</p>
        </div>

        <div class="categories-section">
          <div class="category">
            <div class="category-header">
              <span class="category-label">UX DESIGN</span>
              <div class="category-indicator"></div>
            </div>
            <span class="category-title">Neural UI</span>
          </div>

          <div class="category">
            <div class="category-header">
              <span class="category-label">DEVELOPMENT</span>
              <div class="category-indicator"></div>
            </div>
            <span class="category-title">Quantum Flow</span>
          </div>

          <div class="category">
            <div class="category-header">
              <span class="category-label">ARCHITECTURE</span>
              <div class="category-indicator"></div>
            </div>
            <span class="category-title">Echo System</span>
          </div>
        </div>

        <div class="interaction-hint">
          <div class="hint-dot"></div>
          <span class="hint-text">INTERACT WITH INTERFACE</span>
          <div class="hint-dot"></div>
        </div>
      </div>
    </div>

    <!-- Decorative elements -->
    <div class="decorative-elements">
      <svg class="accent-lines" width="100%" height="100%" viewBox="0 0 100 100" preserveAspectRatio="none">
        <line x1="0" y1="20" x2="100" y2="20" class="accent-line"/>
        <line x1="80" y1="0" x2="80" y2="100" class="accent-line"/>
      </svg>
    </div>
  </div>
</div>

<style>
  .hero-visual {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    background: white;
    overflow: hidden;
  }

  /* Dynamic background */
  .dynamic-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .grid-overlay {
    position: absolute;
    inset: -50%;
    background-image: 
      linear-gradient(to right, rgba(0,0,0,0.03) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0,0,0,0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    transform: rotate(-15deg);
    animation: gridFloat 20s linear infinite;
  }

  .gradient-sphere {
    position: absolute;
    width: 50%;
    aspect-ratio: 1;
    background: radial-gradient(circle at center, 
      rgba(0,0,0,0.02) 0%,
      rgba(0,0,0,0.01) 30%,
      transparent 70%
    );
    border-radius: 50%;
    top: 25%;
    right: -10%;
    animation: spherePulse 10s ease-in-out infinite;
  }

  /* Floating elements */
  .floating-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .floating-element {
    position: absolute;
    width: 100px;
    height: 100px;
    border: 1px solid rgba(0,0,0,0.1);
    opacity: 0.5;
  }

  .floating-element:nth-child(1) {
    top: 20%;
    left: 10%;
    animation: float 15s ease-in-out infinite;
  }

  .floating-element:nth-child(2) {
    top: 60%;
    right: 15%;
    width: 150px;
    height: 150px;
    border-radius: 50%;
    animation: float 20s ease-in-out infinite reverse;
  }

  .floating-element:nth-child(3) {
    bottom: 10%;
    left: 30%;
    width: 80px;
    height: 80px;
    transform: rotate(45deg);
    animation: float 18s ease-in-out infinite;
  }

  /* Content container */
  .content-container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  /* Creative frame */
  .creative-frame {
    position: relative;
    width: 100%;
    max-width: 800px;
    aspect-ratio: 16/9;
    padding: 3rem;
  }

  .frame-line {
    position: absolute;
    background: black;
    transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .frame-line.top, .frame-line.bottom {
    height: 1px;
    width: 100%;
    transform: scaleX(0);
  }

  .frame-line.left, .frame-line.right {
    width: 1px;
    height: 100%;
    transform: scaleY(0);
  }

  .frame-line.top { top: 0; left: 0; transform-origin: left; }
  .frame-line.right { top: 0; right: 0; transform-origin: top; }
  .frame-line.bottom { bottom: 0; right: 0; transform-origin: right; }
  .frame-line.left { bottom: 0; left: 0; transform-origin: bottom; }

  .creative-frame:hover .frame-line {
    transform: scale(1);
  }

  /* Content styling */
  .content {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .label-container {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .label {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    font-weight: 500;
  }

  .label-line {
    width: 50px;
    height: 1px;
    background: black;
    transform-origin: left;
    animation: lineExtend 2s ease-in-out infinite;
  }

  .title-section {
    margin-bottom: 3rem;
  }

  .title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .description {
    font-size: 1.125rem;
    color: rgba(0, 0, 0, 0.6);
    max-width: 32rem;
  }

  /* Categories section */
  .categories-section {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .category {
    position: relative;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .category-label {
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    color: rgba(0, 0, 0, 0.5);
  }

  .category-indicator {
    flex: 1;
    height: 1px;
    background: rgba(0, 0, 0, 0.2);
    transform-origin: left;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .category:hover .category-indicator {
    transform: scaleX(1);
  }

  .category-title {
    font-size: 1.125rem;
    font-weight: 500;
  }

  /* Interaction hint */
  .interaction-hint {
    display: flex;
    align-items: center;
    gap: 1rem;
    opacity: 0.4;
  }

  .hint-dot {
    width: 4px;
    height: 4px;
    background: black;
    border-radius: 50%;
    animation: dotPulse 2s ease-in-out infinite;
  }

  .hint-text {
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    font-weight: 500;
  }

  /* Decorative elements */
  .decorative-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .accent-lines {
    position: absolute;
    inset: 0;
  }

  .accent-line {
    stroke: rgba(0, 0, 0, 0.1);
    stroke-width: 0.5;
    vector-effect: non-scaling-stroke;
  }

  /* Animations */
  @keyframes gridFloat {
    0% { transform: rotate(-15deg) translateY(0); }
    100% { transform: rotate(-15deg) translateY(-50%); }
  }

  @keyframes spherePulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.2); opacity: 0.8; }
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(20px, -20px); }
  }

  @keyframes lineExtend {
    0%, 100% { transform: scaleX(0.3); opacity: 0.5; }
    50% { transform: scaleX(1); opacity: 1; }
  }

  @keyframes dotPulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.5); opacity: 1; }
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .hero-visual {
      aspect-ratio: 4/5;
    }

    .creative-frame {
      padding: 1.5rem;
    }

    .categories-section {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .title {
      font-size: clamp(2rem, 8vw, 2.5rem);
    }

    .description {
      font-size: 1rem;
    }

    .floating-element {
      transform: scale(0.7);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .grid-overlay,
    .gradient-sphere,
    .floating-element,
    .label-line,
    .hint-dot {
      animation: none;
    }
  }
</style>