<section class="py-16 md:py-24 px-4 bg-gray-50 relative overflow-hidden">
  <!-- Background pattern - optimized for performance -->
  <div class="absolute inset-0 opacity-5 pointer-events-none">
    <div class="grid-pattern"></div>
  </div>
  
  <div class="container mx-auto relative z-10">
    <div class="max-w-3xl mx-auto text-center mb-12 md:mb-16" data-aos="fade-up">
      <span class="inline-block px-3 py-1 bg-white text-sm text-gray-800 border border-gray-200 mb-4 shadow-sm">Industries</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-black mb-4">Industries We Transform</h2>
      <p class="text-lg md:text-xl text-gray-600">
        Sector-specific expertise that transcends conventional boundaries.
      </p>
    </div>
    
    <!-- Mobile-optimized grid system -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-6">
      <!-- Industry 1 -->
      <div class="industry-card group" data-aos="fade-up" data-aos-delay="100">
        <div class="industry-icon-container">
          <svg xmlns="http://www.w3.org/2000/svg" class="industry-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 5a2 2 0 100-4 2 2 0 000 4zM6 14a2 2 0 100-4 2 2 0 000 4zM18 14a2 2 0 100-4 2 2 0 000 4zM9 21a2 2 0 100-4 2 2 0 000 4zM15 21a2 2 0 100-4 2 2 0 000 4zM10.5 6L7.5 10.5M13.5 6L16.5 10.5M7 13.5L8.5 17.5M17 13.5L15.5 17.5M12 9v2m0 4h.01" />
          </svg>
          <div class="industry-gradient-overlay"></div>
        </div>
        <div class="industry-content">
          <h3 class="industry-title">Water Management</h3>
          <p class="industry-description">Smart distribution systems for resource optimization</p>
        </div>
        <div class="industry-touch-feedback"></div>
      </div>
      
      <!-- Industry 2 -->
      <div class="industry-card group" data-aos="fade-up" data-aos-delay="200">
        <div class="industry-icon-container">
          <svg xmlns="http://www.w3.org/2000/svg" class="industry-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <div class="industry-gradient-overlay"></div>
        </div>
        <div class="industry-content">
          <h3 class="industry-title">Enterprise Solutions</h3>
          <p class="industry-description">Comprehensive digital transformation for businesses</p>
        </div>
        <div class="industry-touch-feedback"></div>
      </div>
      
      <!-- Industry 3 -->
      <div class="industry-card group" data-aos="fade-up" data-aos-delay="300">
        <div class="industry-icon-container">
          <svg xmlns="http://www.w3.org/2000/svg" class="industry-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <div class="industry-gradient-overlay"></div>
        </div>
        <div class="industry-content">
          <h3 class="industry-title">E-commerce Systems</h3>
          <p class="industry-description">End-to-end digital commerce solutions</p>
        </div>
        <div class="industry-touch-feedback"></div>
      </div>
      
      <!-- Industry 4 -->
      <div class="industry-card group" data-aos="fade-up" data-aos-delay="400">
        <div class="industry-icon-container">
          <svg xmlns="http://www.w3.org/2000/svg" class="industry-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          <div class="industry-gradient-overlay"></div>
        </div>
        <div class="industry-content">
          <h3 class="industry-title">Fintech Solutions</h3>
          <p class="industry-description">Innovative financial technology platforms</p>
        </div>
        <div class="industry-touch-feedback"></div>
      </div>
      
      <!-- Industry 5 -->
      <div class="industry-card group" data-aos="fade-up" data-aos-delay="500">
        <div class="industry-icon-container">
          <svg xmlns="http://www.w3.org/2000/svg" class="industry-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="industry-gradient-overlay"></div>
        </div>
        <div class="industry-content">
          <h3 class="industry-title">Crowdfunding Platforms</h3>
          <p class="industry-description">Secure and scalable solutions for modern fundraising</p>
        </div>
        <div class="industry-touch-feedback"></div>
      </div>
    </div>

    <!-- Mobile-optimized CTA button -->
    <div class="text-center mt-10 md:mt-16" data-aos="fade-up" data-aos-delay="500">
      <a href="/industries" class="cta-button">
        <span class="cta-button-text">Discover all industries</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="cta-button-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Background pattern */
  .grid-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(to right, rgba(0,0,0,0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0,0,0,0.05) 1px, transparent 1px);
    background-size: 50px 50px;
  }
  
  /* Industry card */
  .industry-card {
    position: relative;
    background-color: white;
    border: 1px solid black;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1), box-shadow 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .industry-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }
  }
  
  /* Tap/touch feedback for mobile */
  .industry-touch-feedback {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.05);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .industry-card:active .industry-touch-feedback {
    opacity: 1;
  }
  
  /* Icon container */
  .industry-icon-container {
    height: 160px;
    background-color: black;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }
  
  .industry-icon {
    width: 60px;
    height: 60px;
    color: white;
    position: relative;
    z-index: 2;
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .industry-card:hover .industry-icon {
      transform: scale(1.1);
    }
  }
  
  .industry-gradient-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 1;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .industry-card:hover .industry-gradient-overlay {
      opacity: 1;
    }
  }
  
  /* Content area */
  .industry-content {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    background-color: white;
    transition: background-color 0.4s ease, color 0.4s ease;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .industry-card:hover .industry-content {
      background-color: black;
      color: white;
    }
  }
  
  .industry-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    transition: color 0.4s ease;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .industry-card:hover .industry-title {
      color: white;
    }
  }
  
  .industry-description {
    font-size: 0.875rem;
    color: #6b7280;
    transition: color 0.4s ease;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .industry-card:hover .industry-description {
      color: rgba(255, 255, 255, 0.8);
    }
  }
  
  /* CTA Button */
  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    background-color: black;
    color: white;
    border: none;
    font-weight: 500;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
    min-height: 48px; /* Improved tap target for mobile */
  }
  
  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.7s ease;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-button:hover {
      transform: translateY(-3px);
    }
    
    .cta-button:hover::before {
      left: 100%;
    }
  }
  
  .cta-button-text {
    margin-right: 0.5rem;
    position: relative;
    z-index: 1;
  }
  
  .cta-button-icon {
    width: 20px;
    height: 20px;
    position: relative;
    z-index: 1;
    transition: transform 0.3s ease;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-button:hover .cta-button-icon {
      transform: translateX(3px);
    }
  }
  
  /* Mobile optimizations */
  @media (max-width: 640px) {
    .industry-icon-container {
      height: 120px;
    }
    
    .industry-icon {
      width: 45px;
      height: 45px;
    }
    
    .industry-content {
      padding: 1.25rem;
    }
    
    .industry-title {
      font-size: 1.125rem;
    }
    
    .cta-button {
      width: 100%;
      max-width: 300px;
    }
  }
</style>