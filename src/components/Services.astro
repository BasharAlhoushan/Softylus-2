    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background-color: currentColor;
    transition: width 0.3s ease;
  }
  
  .service-link:hover::after,
  .service-link:focus::after {
    width: 100%;
  }
  
  /* For touch devices */
  .touch-device .service-card {
    transform: none !important;
  }
  
