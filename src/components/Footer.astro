<style>
  /* Dynamic grid background */
  .nebula-grid {
    position: absolute;
    width: 200%;
    height: 200%;
    top: -50%;
    left: -50%;
    background-image: 
      radial-gradient(circle at 50% 50%, rgba(0,0,0,0.03) 1px, transparent 1px),
      linear-gradient(to right, rgba(0,0,0,0.02) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0,0,0,0.02) 1px, transparent 1px);
    background-size: 50px 50px, 25px 25px, 25px 25px;
    transform-origin: center;
    transform: rotate(-2deg) scale(1.1);
  }
  
  /* Animation keyframes */
  @keyframes float-slow {
    0%, 100% { transform: translateY(0) translateX(0); }
    50% { transform: translateY(-20px) translateX(10px); }
  }
  
  @keyframes float-reverse {
    0%, 100% { transform: translateY(0) translateX(0); }
    50% { transform: translateY(15px) translateX(-10px); }
  }
  
  @keyframes subtle-drift {
    0%, 100% { transform: translateY(0) rotate(-2deg); }
    50% { transform: translateY(-10px) rotate(-1.5deg); }
  }
  
  @keyframes pulse-glow {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.05); }
  }
  
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  
  /* Apply animations */
  .animate-float-slow {
    animation: float-slow 15s ease-in-out infinite;
  }
  
  .animate-float-reverse {
    animation: float-reverse 12s ease-in-out infinite;
  }
  
  .animate-subtle-drift {
    animation: subtle-drift 20s ease-in-out infinite;
  }
  
  /* Dynamic dimension card */
  .perspective-container {
    perspective: 1000px;
  }
  
  .dimension-card {
    transition: transform 0.5s ease;
    transform-style: preserve-3d;
  }
  
  .dimension-card:hover {
    transform: translateY(-5px) rotateX(2deg);
  }
  
  .dimension-card-inner {
    border-bottom: 1px solid rgba(0,0,0,0.07);
  }
  
  /* Floating element with shadow */
  .floating-element {
    position: relative;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  .floating-element:hover {
    transform: translateY(-5px);
  }
  
  /* Kinetic card with hover effect */
  .kinetic-card {
    position: relative;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(255,255,255,0.7) 0%, rgba(255,255,255,0.3) 100%);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(0,0,0,0.1);
    border-radius: 0.5rem;
    box-shadow: 
      0 10px 25px -5px rgba(0,0,0,0.05),
      0 0 0 1px rgba(0,0,0,0.05);
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    overflow: hidden;
  }
  
  .kinetic-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, transparent 65%, rgba(255,255,255,0.2) 70%, transparent 75%);
    transform: translateX(-100%);
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  .kinetic-card:hover {
    box-shadow: 
      0 20px 40px -10px rgba(0,0,0,0.1),
      0 0 0 1px rgba(0,0,0,0.05);
    transform: scale(1.02);
  }
  
  .kinetic-card:hover::before {
    transform: translateX(100%);
  }
  
  /* Pulse link effect */
  .pulse-link {
    position: relative;
    transition: all 0.3s ease;
  }
  
  .pulse-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(0,0,0,0.8), transparent);
    transform: scaleX(0.3);
    transform-origin: center;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  .pulse-link:hover {
    letter-spacing: 0.5px;
  }
  
  .pulse-link:hover::after {
    transform: scaleX(1);
  }
  
  /* Neo text styling */
  .neo-text {
    font-weight: 300;
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(0,0,0,0.75);
    max-width: 30ch;
  }
  
  .neo-label {
    position: relative;
    color: rgba(0,0,0,0.5);
    letter-spacing: 0.1em;
    font-weight: 500;
    display: inline-block;
  }
  
  .neo-label::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 2rem;
    height: 1px;
    background-color: rgba(0,0,0,0.2);
  }
  
  /* Marquee animation */
  .neo-marquee {
    display: flex;
    white-space: nowrap;
    overflow: hidden;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
    font-weight: 500;
    color: rgba(0,0,0,0.6);
    animation: marquee 20s linear infinite;
  }
  
  .neo-marquee span {
    display: inline-block;
  }
  
  /* Neo Icon Link */
  .neo-icon-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: rgba(0,0,0,0.6);
    transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
    border-radius: 50%;
    position: relative;
  }
  
  .neo-icon-link .icon {
    width: 1.5rem;
    height: 1.5rem;
    transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  .neo-icon-link::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: rgba(0,0,0,0.03);
    opacity: 0;
    transform: scale(0.8);
    transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  .neo-icon-link:hover {
    color: rgba(0,0,0,0.9);
