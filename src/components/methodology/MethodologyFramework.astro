<section class="py-24 px-4 bg-gray-50 relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 pointer-events-none opacity-[0.03]" aria-hidden="true">
    <div class="absolute inset-0 bg-grid-pattern"></div>
  </div>

  <div class="container mx-auto relative">
    <div class="max-w-3xl mx-auto text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">Our Framework</h2>
      <p class="text-xl text-gray-600">
        A comprehensive system that ensures consistent quality and exceptional outcomes for every digital project.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {frameworkPillars.map((pillar, index) => (
        <div 
          class="framework-card" 
          data-aos="fade-up" 
          data-aos-delay={100 + index * 50}
        >
          <div class="framework-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={pillar.icon} />
            </svg>
          </div>
          
          <h3 class="framework-title">{pillar.title}</h3>
          <p class="framework-description">{pillar.description}</p>
          
          <div class="framework-details mt-4">
            <ul class="space-y-2">
              {pillar.points.map(point => (
                <li class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-black flex-shrink-0 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-700">{point}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div class="framework-progress"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(0,0,0,0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0,0,0,0.05) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .framework-card {
    background: white;
    padding: 2rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .framework-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .framework-icon {
    width: 3rem;
    height: 3rem;
    background: black;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .framework-card:hover .framework-icon {
    transform: rotate(10deg);
  }

  .framework-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: black;
  }

  .framework-description {
    font-size: 0.95rem;
    color: rgba(0, 0, 0, 0.7);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .framework-details {
    margin-top: auto;
    background: rgba(0, 0, 0, 0.02);
    padding: 1rem;
    border-radius: 0.5rem;
  }

  .framework-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: black;
    transition: width 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .framework-card:hover .framework-progress {
    width: 100%;
  }

  /* Touch optimization */
  @media (max-width: 768px) {
    .framework-card {
      padding: 1.5rem;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .framework-card:hover {
      transform: none;
    }

    .framework-card:hover .framework-icon {
      transform: none;
    }

    .framework-progress {
      transition: none;
    }
  }
</style>