---
// MethodologyApproach.astro - Our approach to digital solutions
const approaches = [
  {
    title: "User-Centered Design",
    description: "We place the user at the heart of every decision, ensuring products are intuitive, accessible, and delightful to use.",
    icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
  },
  {
    title: "Strategic Development",
    description: "Our development process prioritizes scalable architecture, maintainable code, and future-proof solutions.",
    icon: "M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
  },
  {
    title: "Collaborative Partnership",
    description: "We work as an extension of your team, ensuring transparent communication and shared success.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
  },
  {
    title: "Continuous Improvement",
    description: "We believe in iterative refinement based on data, feedback, and emerging technologies.",
    icon: "M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
  }
];
---

<section class="py-24 px-4 bg-gray-50">
  <div class="container mx-auto">
    <div class="max-w-3xl mx-auto text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">Our Approach</h2>
      <p class="text-xl text-gray-600">
        How we deliver exceptional digital experiences through careful planning and execution.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {approaches.map((approach, index) => (
        <div 
          class="approach-card" 
          data-aos="fade-up" 
          data-aos-delay={100 + index * 50}
        >
          <div class="approach-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={approach.icon} />
            </svg>
          </div>
          <h3 class="approach-title">{approach.title}</h3>
          <p class="approach-description">{approach.description}</p>
          <div class="approach-progress"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .approach-card {
    background: white;
    padding: 2rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .approach-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .approach-icon {
    width: 3rem;
    height: 3rem;
    background: black;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .approach-card:hover .approach-icon {
    transform: rotate(10deg);
  }

  .approach-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: black;
  }

  .approach-description {
    font-size: 0.95rem;
    color: rgba(0, 0, 0, 0.7);
    line-height: 1.6;
  }

  .approach-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: black;
    transition: width 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .approach-card:hover .approach-progress {
    width: 100%;
  }

  /* Touch optimization */
  @media (max-width: 768px) {
    .approach-card {
      padding: 1.5rem;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .approach-card:hover {
      transform: none;
    }

    .approach-card:hover .approach-icon {
      transform: none;
    }

    .approach-progress {
      transition: none;
    }
  }
</style>