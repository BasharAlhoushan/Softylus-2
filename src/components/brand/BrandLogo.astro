---
// BrandLogo.astro - Logo guidelines section with actual Softylus logo styling
---

<section id="logo" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="section-header" data-aos="fade-up">
        <span class="section-number">01</span>
        <h2 class="section-title">Logo</h2>
      </div>

      <div class="mt-16 grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Primary Logo -->
        <div>
          <h3 class="text-2xl font-display font-bold mb-6">Primary Logo</h3>
          <div class="bg-white p-16 mb-6 flex items-center justify-center border border-gray-200">
            <!-- Softylus Logo -->
            <div class="premium-logo-container">
              <div class="logo-wrapper">
                <!-- Logo Symbol -->
                <div class="logo-symbol">
                  <div class="symbol-outer-ring"></div>
                  <div class="symbol-inner-ring"></div>
                  <div class="symbol-diamond"></div>
                  <div class="symbol-dot"></div>
                </div>
                
                <!-- Logo Typography -->
                <div class="logo-text-container">
                  <div class="text-divider"></div>
                  <div class="logo-text-group">
                    <span class="logo-letter letter-s">S</span>
                    <span class="logo-letter letter-o">O</span>
                    <span class="logo-letter letter-f">F</span>
                    <span class="logo-letter letter-t">T</span>
                    <span class="logo-letter letter-y">Y</span>
                    <span class="logo-letter letter-l">L</span>
                    <span class="logo-letter letter-u">U</span>
                    <span class="logo-letter letter-s2">S</span>
                  </div>
                  <div class="logo-underline-effect">
                    <div class="logo-underline-track"></div>
                    <div class="logo-underline-progress"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Logo Variations -->
          <div class="mb-8">
            <h4 class="text-lg font-bold mb-4">Logo Variations</h4>
            <div class="grid grid-cols-2 gap-4">
              <!-- Light Version -->
              <div class="p-8 bg-white border border-gray-200">
                <div class="premium-logo-container" style="transform: scale(0.7);">
                  <div class="logo-wrapper">
                    <div class="logo-symbol">
                      <div class="symbol-outer-ring"></div>
                      <div class="symbol-inner-ring"></div>
                      <div class="symbol-diamond"></div>
                      <div class="symbol-dot"></div>
                    </div>
                    <div class="logo-text-container">
                      <div class="text-divider"></div>
                      <div class="logo-text-group">
                        <span class="logo-letter">S</span>
                        <span class="logo-letter">O</span>
                        <span class="logo-letter">F</span>
                        <span class="logo-letter">T</span>
                        <span class="logo-letter">Y</span>
                        <span class="logo-letter">L</span>
                        <span class="logo-letter">U</span>
                        <span class="logo-letter">S</span>
                      </div>
                    </div>
                  </div>
                </div>
                <p class="text-center text-sm text-gray-500 mt-4">Light Version</p>
              </div>

              <!-- Dark Version -->
              <div class="p-8 bg-black border border-gray-200">
                <div class="premium-logo-container dark" style="transform: scale(0.7);">
                  <div class="logo-wrapper">
                    <div class="logo-symbol">
                      <div class="symbol-outer-ring"></div>
                      <div class="symbol-inner-ring"></div>
                      <div class="symbol-diamond"></div>
                      <div class="symbol-dot"></div>
                    </div>
                    <div class="logo-text-container">
                      <div class="text-divider"></div>
                      <div class="logo-text-group">
                        <span class="logo-letter">S</span>
                        <span class="logo-letter">O</span>
                        <span class="logo-letter">F</span>
                        <span class="logo-letter">T</span>
                        <span class="logo-letter">Y</span>
                        <span class="logo-letter">L</span>
                        <span class="logo-letter">U</span>
                        <span class="logo-letter">S</span>
                      </div>
                    </div>
                  </div>
                </div>
                <p class="text-center text-sm text-white mt-4">Dark Version</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Logo Guidelines -->
        <div>
          <h3 class="text-2xl font-display font-bold mb-6">Usage Guidelines</h3>
          <div class="space-y-8">
            <!-- Clear Space -->
            <div>
              <h4 class="text-lg font-bold mb-3">Clear Space</h4>
              <p class="text-gray-600 mb-4">Always maintain minimum clear space around the logo. This space should be equal to the height of the logo symbol (X).</p>
              <div class="bg-white p-8 border border-gray-200">
                <div class="relative">
                  <!-- Clear space guides -->
                  <div class="absolute inset-0 border-2 border-dashed border-gray-300 m-8"></div>
                  <!-- Logo -->
                  <div class="premium-logo-container" style="transform: scale(0.5);">
                    <!-- Logo content -->
                  </div>
                  <!-- Measurement indicators -->
                  <div class="absolute inset-0 pointer-events-none">
                    <div class="absolute top-0 left-1/2 h-8 border-l border-gray-300"></div>
                    <div class="absolute bottom-0 left-1/2 h-8 border-l border-gray-300"></div>
                    <div class="absolute left-0 top-1/2 w-8 border-t border-gray-300"></div>
                    <div class="absolute right-0 top-1/2 w-8 border-t border-gray-300"></div>
                    <span class="absolute top-2 left-1/2 transform -translate-x-1/2 text-sm text-gray-500">X</span>
                    <span class="absolute bottom-2 left-1/2 transform -translate-x-1/2 text-sm text-gray-500">X</span>
                    <span class="absolute left-2 top-1/2 transform -translate-y-1/2 text-sm text-gray-500">X</span>
                    <span class="absolute right-2 top-1/2 transform -translate-y-1/2 text-sm text-gray-500">X</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Minimum Size -->
            <div>
              <h4 class="text-lg font-bold mb-3">Minimum Size</h4>
              <p class="text-gray-600 mb-4">To maintain legibility, never use the logo smaller than the specified minimum sizes.</p>
              <div class="bg-white p-8 border border-gray-200">
                <div class="space-y-8">
                  <!-- Print -->
                  <div>
                    <p class="text-sm text-gray-500 mb-2">Print Minimum: 25mm wide</p>
                    <div class="premium-logo-container" style="transform: scale(0.3);">
                      <!-- Logo content -->
                    </div>
                  </div>
                  <!-- Digital -->
                  <div>
                    <p class="text-sm text-gray-500 mb-2">Digital Minimum: 120px wide</p>
                    <div class="premium-logo-container" style="transform: scale(0.2);">
                      <!-- Logo content -->
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Do's and Don'ts -->
      <div class="mt-16">
        <h3 class="text-2xl font-display font-bold mb-6">Do's and Don'ts</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Do's -->
          <div>
            <h4 class="text-lg font-bold mb-4 text-green-600">Do</h4>
            <div class="space-y-4">
              <div class="p-4 bg-white border border-green-200 rounded">
                <p class="text-gray-600">Use the logo in its original proportions</p>
              </div>
              <div class="p-4 bg-white border border-green-200 rounded">
                <p class="text-gray-600">Maintain adequate clear space around the logo</p>
              </div>
              <div class="p-4 bg-white border border-green-200 rounded">
                <p class="text-gray-600">Use approved color variations</p>
              </div>
              <div class="p-4 bg-white border border-green-200 rounded">
                <p class="text-gray-600">Scale the logo proportionally</p>
              </div>
            </div>
          </div>
          <!-- Don'ts -->
          <div>
            <h4 class="text-lg font-bold mb-4 text-red-600">Don't</h4>
            <div class="space-y-4">
              <div class="p-4 bg-white border border-red-200 rounded">
                <p class="text-gray-600">Distort or stretch the logo</p>
              </div>
              <div class="p-4 bg-white border border-red-200 rounded">
                <p class="text-gray-600">Add effects like shadows or outlines</p>
              </div>
              <div class="p-4 bg-white border border-red-200 rounded">
                <p class="text-gray-600">Use unapproved colors</p>
              </div>
              <div class="p-4 bg-white border border-red-200 rounded">
                <p class="text-gray-600">Place the logo on busy backgrounds that reduce visibility</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Logo Styles */
  .premium-logo-container {
    display: flex;
    flex-direction: column;
    font-size: 1.5rem;
    padding: 0.25rem 0;
    transform-style: preserve-3d;
    perspective: 1000px;
    position: relative;
    transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .logo-wrapper {
    transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
    height: 38px;
    padding: 0 1px;
    position: relative;
    transform-style: preserve-3d;
    display: flex;
    align-items: center;
  }

  /* Logo Symbol */
  .logo-symbol {
    position: relative;
    width: 32px;
    height: 32px;
    margin-right: 12px;
    transform-style: preserve-3d;
  }

  .symbol-outer-ring {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 1.5px solid rgba(0, 0, 0, 0.85);
    border-radius: 50%;
  }

  .symbol-inner-ring {
    position: absolute;
    top: 22%;
    left: 22%;
    width: 56%;
    height: 56%;
    border: 1px solid rgba(0, 0, 0, 0.75);
    border-radius: 50%;
  }

  .symbol-diamond {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 28%;
    height: 28%;
    background-color: black;
    transform: translate(-50%, -50%) rotate(45deg);
  }

  .symbol-dot {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 10%;
    height: 10%;
    background-color: white;
    border-radius: 50%;
    transform: translate(-50%, -50%);
  }

  /* Logo Text */
  .logo-text-container {
    position: relative;
    display: flex;
    padding-left: 10px;
    height: 100%;
    transform-style: preserve-3d;
  }

  .text-divider {
    position: absolute;
    left: -5px;
    top: 15%;
    height: 70%;
    width: 1px;
    background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.2), transparent);
    opacity: 0.7;
  }

  .logo-text-group {
    display: flex;
    align-items: center;
  }

  .logo-letter {
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
    letter-spacing: 0.5px;
    color: black;
  }

  /* Dark version */
  .premium-logo-container.dark .symbol-outer-ring,
  .premium-logo-container.dark .symbol-inner-ring {
    border-color: white;
  }

  .premium-logo-container.dark .symbol-diamond {
    background-color: white;
  }

  .premium-logo-container.dark .symbol-dot {
    background-color: black;
  }

  .premium-logo-container.dark .logo-letter {
    color: white;
  }

  .premium-logo-container.dark .text-divider {
    background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.2), transparent);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .premium-logo-container {
      transform: scale(0.8);
    }
  }
</style>