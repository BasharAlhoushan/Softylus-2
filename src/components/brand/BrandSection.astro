---
// BrandSection.astro - Reusable section component for brand guidelines
export interface Props {
  id: string;
  number: string;
  title: string;
  background?: 'white' | 'gray';
}

const { id, number, title, background = 'white' } = Astro.props;
---

<section id={id} class={`py-16 bg-${background === 'gray' ? 'gray-50' : 'white'}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="section-header" data-aos="fade-up">
        <span class="section-number">{number}</span>
        <h2 class="section-title">{title}</h2>
      </div>
      
      <div class="mt-16">
        <slot />
      </div>
    </div>
  </div>
</section>

<style>
  .section-header {
    position: relative;
    padding-left: 3rem;
  }

  .section-number {
    position: absolute;
    left: 0;
    top: 0.5rem;
    font-family: 'Playfair Display', serif;
    font-size: 1rem;
    font-weight: 600;
    color: rgba(0, 0, 0, 0.4);
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    font-family: 'Playfair Display', serif;
  }
</style>