---
import Button from '../ui/Button.astro';
---

<section class="py-24 px-4 bg-black text-white relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Animated gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-black via-gray-900 to-black opacity-90"></div>
    
    <!-- Grid pattern -->
    <div class="absolute inset-0 opacity-[0.05]">
      <div class="absolute inset-0 bg-grid-pattern"></div>
    </div>
    
    <!-- Floating elements -->
    <div class="absolute top-1/4 right-1/4 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/3 left-1/3 w-96 h-96 bg-white/3 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto relative">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Main content -->
      <div data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold mb-6">
          Ready to Transform Your Digital Vision?
        </h2>
        <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
          Let's collaborate to create something extraordinary. Our team is ready to bring your ideas to life with precision and innovation.
        </p>
      </div>

      <!-- Action buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4" data-aos="fade-up" data-aos-delay="100">
        <Button 
          href="/contact" 
          variant="outline" 
          size="lg" 
          class="bg-white text-black hover:bg-black hover:text-white border-white w-full sm:w-auto"
          withIcon
        >
          Start a Project
        </Button>
        
        <Button 
          href="/portfolio" 
          variant="outline" 
          size="lg" 
          class="border-white text-white hover:bg-white hover:text-black w-full sm:w-auto"
          withIcon
        >
          View Our Work
        </Button>
      </div>

      <!-- Contact info -->
      <div class="mt-16 flex flex-col md:flex-row items-center justify-center gap-8" data-aos="fade-up" data-aos-delay="200">
        <a href="mailto:beyond@softylus.com" class="contact-link group">
          <div class="contact-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <span class="contact-text">beyond@softylus.com</span>
        </a>
        
        <div class="hidden md:block w-px h-8 bg-white/20"></div>
        
        <a href="tel:+1234567890" class="contact-link group">
          <div class="contact-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <span class="contact-text">+1 (234) 567-890</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(255,255,255,0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255,255,255,0.05) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  /* Contact link styles */
  .contact-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
  }

  .contact-icon {
    width: 3rem;
    height: 3rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .contact-text {
    font-size: 1.125rem;
    position: relative;
  }

  .contact-text::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: white;
    transition: width 0.3s ease;
  }

  /* Hover effects */
  .contact-link:hover .contact-icon {
    transform: scale(1.1);
    background: white;
    color: black;
  }

  .contact-link:hover .contact-text::after {
    width: 100%;
  }

  /* Touch device optimizations */
  @media (hover: none) {
    .contact-link {
      padding: 0.5rem 0;
    }

    .contact-text::after {
      width: 30%;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .contact-link:hover .contact-icon {
      transform: none;
    }

    .contact-text::after {
      transition: none;
    }
  }
</style>