---
import { siteContent } from '@lib/content';
import Section from '../ui/Section.astro';

const { services } = siteContent;
---

<Section
  contentKey="services"
  background="white"
  padding="lg"
  class="py-20 px-4 relative overflow-hidden"
>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {services.items.map((service, index) => (
      <div 
        class="tech-card" 
        data-aos="fade-up" 
        data-aos-delay={100 + index * 50}
      >
        <div class={`service-category inline-block px-3 py-1 rounded-full text-xs font-medium mb-4 bg-${service.category.toLowerCase()}-50 text-${service.category.toLowerCase()}-900`}>
          {service.category}
        </div>
        
        <div class="service-icon-wrapper mb-6">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={service.icon} />
            </svg>
          </div>
        </div>
        
        <h3 class="text-xl font-display font-bold mb-3">{service.title}</h3>
        <p class="text-gray-600 mb-6">{service.description}</p>
        
        <a href={`/services/${service.title.toLowerCase().replace(/\s+/g, '-')}`} class="inline-flex items-center text-black font-medium group-hover:underline">
          Learn more
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform transition-transform group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        
        <div class="service-progress"></div>
      </div>
    ))}
  </div>
</Section>

<style>
  .tech-card {
    position: relative;
    padding: 2rem;
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .tech-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .service-icon-wrapper {
    position: relative;
    width: 3rem;
    height: 3rem;
  }

  .service-icon {
    width: 100%;
    height: 100%;
    background: black;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .tech-card:hover .service-icon {
    transform: rotate(10deg);
  }

  .service-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: black;
    transition: width 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .tech-card:hover .service-progress {
    width: 100%;
  }

  @media (prefers-reduced-motion: reduce) {
    .tech-card:hover {
      transform: none;
    }

    .tech-card:hover .service-icon {
      transform: none;
    }

    .service-progress {
      transition: none;
    }
  }
</style>