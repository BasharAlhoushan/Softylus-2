  /* Manifesto Wheel */
  .manifesto-wheel-container {
    position: relative;
    width: 100%;
    max-width: 700px;
    height: 450px;
    margin: 0 auto;
  }
  
  .manifesto-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: min(220px, 50vw);
    height: min(220px, 50vw);
    background-color: white;
    border-radius: 50%;
