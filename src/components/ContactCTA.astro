<section class="py-24 relative overflow-hidden">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Dynamic circuit-like patterns -->
    <div class="absolute inset-0 opacity-[0.02]">
      <svg width="100%" height="100%" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
        <pattern id="circuit-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <path d="M 0,10 L 8,10 C 9,10 10,9 10,8 L 10,0" fill="none" stroke="currentColor" stroke-width="0.5"></path>
          <path d="M 10,20 L 10,12 C 10,11 11,10 12,10 L 20,10" fill="none" stroke="currentColor" stroke-width="0.5"></path>
        </pattern>
        <rect x="0" y="0" width="100%" height="100%" fill="url(#circuit-pattern)"></rect>
      </svg>
    </div>
    
    <!-- Floating elements -->
    <div class="absolute top-1/4 left-1/4 w-64 h-64 rounded-full bg-black/5 blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/3 w-96 h-96 rounded-full bg-black/3 blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4">
    <div class="cta-container" data-aos="fade-up">
      <!-- The main card container with perspective effect -->
      <div class="cta-card">
        <div class="cta-card-inner">
          <!-- Content split into two sides -->
          <div class="md:flex items-stretch">
            <!-- Left side - Content -->
            <div class="cta-content-side md:w-1/2 p-10 md:p-16 xl:p-20 relative flex flex-col justify-center">
              <div class="relative z-10">
                <div class="cta-badge">
                  <span class="pulse-dot" aria-hidden="true"></span>
                  <span>Collaboration</span>
                </div>
                
                <h2 class="cta-heading">
                  <span class="cta-title-line">Let's create</span>
                  <span class="cta-title-line">something</span>
                  <span class="cta-title-line"><span class="cta-title-highlight">extraordinary</span>.</span>
                </h2>
                
                <p class="cta-description">
                  At the intersection of imagination and implementation, we transform concepts into 
                  experiences that resonate and innovations that endure.
                </p>
                
                <div class="cta-actions">
                  <a href="/contact" class="cta-button-primary" aria-label="Start a new project">
                    <span class="cta-button-text">Start a project</span>
                    <span class="cta-button-icon" aria-hidden="true">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                        <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                      </svg>
                    </span>
                  </a>
                </div>
              </div>
              
              <!-- Decorative elements -->
              <div class="absolute left-0 bottom-0 h-1/2 w-1 bg-gradient-to-b from-transparent to-black/10" aria-hidden="true"></div>
              <div class="absolute right-0 top-0 h-1/2 w-1 bg-gradient-to-b from-black/10 to-transparent" aria-hidden="true"></div>
            </div>
            
            <!-- Right side - Visual -->
            <div class="cta-visual-side md:w-1/2 relative overflow-hidden">
              <!-- The 3D visual elements -->
              <div class="cta-3d-scene">
                <!-- Multiple layers for parallax effect -->
                <div class="cta-layer cta-layer-1">
                  <div class="cta-geometric-shape cta-circle" aria-hidden="true"></div>
                  <div class="cta-geometric-shape cta-square" aria-hidden="true"></div>
                  <div class="cta-geometric-shape cta-triangle" aria-hidden="true"></div>
                </div>
                
                <div class="cta-layer cta-layer-2">
                  <div class="cta-canvas-visual" aria-hidden="true">
                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                      <path fill="none" stroke="black" stroke-width="0.5" d="M40,100 Q100,20 160,100 T40,100" />
                      <circle cx="40" cy="100" r="3" />
                      <circle cx="160" cy="100" r="3" />
                    </svg>
                  </div>
                </div>
                
                <div class="cta-layer cta-layer-3">
                  <div class="cta-connection-dots" aria-hidden="true">
                    <div class="cta-dot"></div>
                    <div class="cta-dot"></div>
                    <div class="cta-dot"></div>
                    <div class="cta-connector"></div>
                  </div>
                </div>
                
                <!-- Contact information overlay -->
                <div class="cta-contact-info">
                  <div class="cta-info-card">
                    <h3>Reach out</h3>
                    <a href="mailto:beyond@softylus.com" class="cta-email-link">
                      beyond@softylus.com
                      <span class="cta-underline" aria-hidden="true"></span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Container styling */
  .cta-container {
    perspective: 1500px;
    padding: 2rem 0;
  }
  
  /* Main card with hover effects */
  .cta-card {
    position: relative;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    transform-style: preserve-3d;
    border: 1px solid rgba(0, 0, 0, 0.1);
    background: white;
    box-shadow: 
      0 20px 80px -20px rgba(0, 0, 0, 0.08),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-card:hover {
      transform: translateY(-10px) rotateX(2deg) rotateY(-1deg);
      box-shadow: 
        0 30px 100px -10px rgba(0, 0, 0, 0.12),
        0 0 0 1px rgba(0, 0, 0, 0.05);
    }
  }
  
  .cta-card-inner {
    position: relative;
    z-index: 2;
  }
  
  /* Content side styling */
  .cta-content-side {
    position: relative;
    background: linear-gradient(to bottom right, rgba(255, 255, 255, 1), rgba(250, 250, 250, 0.8));
  }
  
  /* Badge styling */
  .cta-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.35rem 0.75rem;
    background-color: white;
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 2rem;
    margin-bottom: 1.5rem;
    transform: rotate(-1deg);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  .pulse-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: black;
    position: relative;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .pulse-dot::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      background-color: black;
      opacity: 0.4;
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
  }
  
  @keyframes pulse {
    0% { transform: scale(1); opacity: 0.4; }
    50% { transform: scale(2.5); opacity: 0; }
    100% { transform: scale(1); opacity: 0; }
  }
  
  /* Heading styling */
  .cta-heading {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    font-weight: 700;
    color: black;
  }
  
  @media (min-width: 768px) {
    .cta-heading {
      font-size: 3rem;
    }
  }
  
  @media (min-width: 1280px) {
    .cta-heading {
      font-size: 3.5rem;
    }
  }
  
  .cta-title-line {
    display: block;
    transform: translateY(0);
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-card:hover .cta-title-line {
      transform: translateY(-5px);
      transition-delay: calc(var(--index, 0) * 0.1s);
    }
  }
  
  .cta-title-line:nth-child(1) { --index: 1; }
  .cta-title-line:nth-child(2) { --index: 2; }
  .cta-title-line:nth-child(3) { --index: 3; }
  
  .cta-title-highlight {
    position: relative;
    display: inline-block;
  }
  
  .cta-title-highlight::after {
    content: '';
    position: absolute;
    bottom: 0.1em;
    left: -0.1em;
    right: -0.1em;
    height: 0.2em;
    background-color: rgba(0, 0, 0, 0.07);
    z-index: -1;
    transform: scaleX(0.95) skewX(-8deg);
    transform-origin: left;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-card:hover .cta-title-highlight::after {
      transform: scaleX(1.05) skewX(-8deg);
    }
  }
  
  /* Description styling */
  .cta-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: rgba(0, 0, 0, 0.7);
    margin-bottom: 2.5rem;
    max-width: 30rem;
  }
  
  /* Button styling */
  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .cta-button-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.75rem;
    background-color: black;
    color: white;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  
  .cta-button-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    z-index: -1;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-button-primary:hover {
      transform: translateY(-2px);
    }
    
    .cta-button-primary:hover::before {
      transform: translateX(100%);
    }
  }
  
  .cta-button-text {
    position: relative;
    z-index: 2;
  }
  
  .cta-button-icon {
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-button-primary:hover .cta-button-icon {
      transform: translateX(3px);
    }
  }
  
  /* Visual side styling */
  .cta-visual-side {
    background: linear-gradient(135deg, #f8f8f8, #ffffff);
    height: 350px;
  }
  
  @media (min-width: 768px) {
    .cta-visual-side {
      height: auto;
    }
  }
  
  .cta-3d-scene {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    perspective: 1000px;
    overflow: hidden;
  }
  
  /* Layers for parallax effect */
  .cta-layer {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-card:hover .cta-layer-1 {
      transform: translateZ(20px);
    }
    
    .cta-card:hover .cta-layer-2 {
      transform: translateZ(40px);
    }
    
    .cta-card:hover .cta-layer-3 {
      transform: translateZ(60px);
    }
  }
  
  /* Geometric shapes */
  .cta-geometric-shape {
    position: absolute;
    opacity: 0.3;
    transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    transform-style: preserve-3d;
  }
  
  .cta-circle {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 1px solid rgba(0, 0, 0, 0.2);
    top: 20%;
    right: 15%;
  }
  
  .cta-square {
    width: 80px;
    height: 80px;
    border: 1px solid rgba(0, 0, 0, 0.2);
    bottom: 20%;
    left: 10%;
  }
  
  .cta-triangle {
    width: 0;
    height: 0;
    border-left: 60px solid transparent;
    border-right: 60px solid transparent;
    border-bottom: 100px solid rgba(0, 0, 0, 0.1);
    bottom: 30%;
    right: 30%;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-card:hover .cta-circle {
      transform: translateZ(40px) translateX(-10px) rotate(10deg);
    }
    
    .cta-card:hover .cta-square {
      transform: translateZ(30px) translateY(10px) rotate(-5deg);
    }
    
    .cta-card:hover .cta-triangle {
      transform: translateZ(50px) translateX(10px) rotate(5deg);
    }
  }
  
  /* Canvas visual */
  .cta-canvas-visual {
    position: absolute;
    width: 70%;
    height: 70%;
    top: 15%;
    left: 15%;
    opacity: 0.8;
  }
  
  .cta-canvas-visual svg {
    width: 100%;
    height: 100%;
  }
  
  /* Connection dots */
  .cta-connection-dots {
    position: absolute;
    width: 200px;
    height: 100px;
    top: 30%;
    left: 25%;
  }
  
  .cta-dot {
    position: absolute;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: black;
    opacity: 0.2;
  }
  
  .cta-dot:nth-child(1) {
    top: 0;
    left: 0;
  }
  
  .cta-dot:nth-child(2) {
    top: 50%;
    left: 50%;
  }
  
  .cta-dot:nth-child(3) {
    bottom: 0;
    right: 0;
  }
  
  .cta-connector {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    clip-path: polygon(0 0, 100% 50%, 100% 100%);
  }
  
  /* Contact info overlay */
  .cta-contact-info {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-card:hover .cta-contact-info {
      opacity: 1;
    }
  }
  
  .cta-info-card {
    padding: 1.5rem;
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    text-align: center;
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-card:hover .cta-info-card {
      transform: translateY(0);
      opacity: 1;
      transition-delay: 0.2s;
    }
  }
  
  /* For touch devices, show the info card without hover */
  .touch-device .cta-contact-info {
    opacity: 1;
    position: relative;
    margin-top: 1rem;
  }
  
  .touch-device .cta-info-card {
    transform: translateY(0);
    opacity: 1;
    background-color: white;
  }
  
  .cta-info-card h3 {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }
  
  .cta-email-link {
    position: relative;
    font-size: 1rem;
    color: black;
    font-weight: 500;
    display: inline-block;
  }
  
  .cta-underline {
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: black;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  @media not (prefers-reduced-motion: reduce) {
    .cta-email-link:hover .cta-underline {
      transform: scaleX(1);
      transform-origin: left;
    }
  }
  
  /* Touch device specific styles */
  .touch-device .cta-email-link .cta-underline {
    transform: scaleX(0.3);
  }
  
  /* Responsive adjustments */
  @media (max-width: 767px) {
    .cta-content-side {
      padding: 2rem;
    }
    
    .cta-heading {
      font-size: 2rem;
    }
    
    .cta-description {
      font-size: 1rem;
    }
    
    .cta-visual-side {
      min-height: 250px;
    }
    
    .cta-button-primary {
      width: 100%;
      justify-content: center;
      min-height: 48px; /* Improved tap target size */
    }
  }
</style>