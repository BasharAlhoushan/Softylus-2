<script>
  // Mobile menu toggle with animation
  document.addEventListener('DOMContentLoaded', () => {
    // Logo animation on page load
    const logoLetters = document.querySelectorAll('.logo-letter');
    const logoSymbol = document.querySelector('.logo-symbol');
    const logoUnderlineProgress = document.querySelector('.logo-underline-progress');
    
    // Sequence the logo animations
    if (logoSymbol) {
      logoSymbol.classList.add('animate-in');
    }
    
    // Staggered letter animation
    logoLetters.forEach((letter, index) => {
      setTimeout(() => {
        letter.classList.add('animate-in');
      }, 100 + (index * 60));
    });
    
    // Animate underline after letters
    setTimeout(() => {
      if (logoUnderlineProgress) {
        logoUnderlineProgress.classList.add('animate-in');
      }
    }, 700);
    
    // Create shimmer animation timing function for logo
    const createShimmerEffect = () => {
      const logoContainer = document.querySelector('.premium-logo-container');
      if (logoContainer) {
        // Reset animation by removing and re-adding the class
        const luxuryShine = logoContainer.querySelector('.logo-luxury-shine');
        if (luxuryShine) {
          luxuryShine.classList.remove('animate-shimmer');
          void luxuryShine.offsetWidth; // Force reflow
          luxuryShine.classList.add('animate-shimmer');
        }
      }
    };
    
    // Initial shimmer effect after page load
    setTimeout(createShimmerEffect, 2000);
    
    // Repeat shimmer effect periodically
    setInterval(createShimmerEffect, 8000);

    // Handle menu toggle
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuLines = document.querySelectorAll('.menu-line');
    
    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', () => {
        const expanded = menuToggle.getAttribute('aria-expanded') === 'true' || false;
        
        // Toggle menu visibility
        mobileMenu.classList.toggle('hidden');
        
        // Update accessibility attributes
        menuToggle.setAttribute('aria-expanded', !expanded);
        
        // Animate to X icon when open
        if (!expanded) {
          menuLines[0].classList.add('rotate-45', 'translate-y-2');
          menuLines[1].classList.add('opacity-0');
          menuLines[2].classList.add('-rotate-45', '-translate-y-2');
        } else {
          menuLines[0].classList.remove('rotate-45', 'translate-y-2');
          menuLines[1].classList.remove('opacity-0');
          menuLines[2].classList.remove('-rotate-45', '-translate-y-2');
        }
        
        // Animate menu items if menu is visible
        if (!mobileMenu.classList.contains('hidden')) {
          const menuItems = mobileMenu.querySelectorAll('.mobile-nav-link');
          menuItems.forEach((item, index) => {
            item.style.animationDelay = `${index * 0.05}s`;
            item.classList.add('menu-item-enter');
          });
        }
      });
    }
    
    // Header background change on scroll with additional animations
    const header = document.getElementById('main-header');
    let lastScrollY = window.scrollY;
    
    if (header) {
      const handleScroll = () => {
        const currentScrollY = window.scrollY;
        
        // Add background when scrolling down
        if (currentScrollY > 10) {
          header.classList.add('bg-white', 'shadow-subtle', 'py-2');
          header.classList.remove('py-4');
        } else {
          header.classList.remove('bg-white', 'shadow-subtle', 'py-2');
          header.classList.add('py-4');
        }
        
        // Hide header when scrolling down, show when scrolling up (for mobile)
        if (window.innerWidth < 768) {
          if (currentScrollY > lastScrollY && currentScrollY > 100) {
            header.classList.add('header-hidden');
          } else {
            header.classList.remove('header-hidden');
          }
        }
        
        lastScrollY = currentScrollY;
      };
      
      // Throttle scroll event for better performance
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            handleScroll();
            ticking = false;
          });
          ticking = true;
        }
      });
    }
    
    // Add magnetic effect to navigation links (desktop only)
    if (window.matchMedia('(min-width: 768px)').matches) {
      const navLinks = document.querySelectorAll('.nav-link');
      const magnetStrength = 0.3;
      
      navLinks.forEach(link => {
        link.addEventListener('mousemove', (e) => {
          const bounds = link.getBoundingClientRect();
          const centerX = bounds.left + bounds.width / 2;
          const centerY = bounds.top + bounds.height / 2;
          
          const distanceX = (e.clientX - centerX) * magnetStrength;
          const distanceY = (e.clientY - centerY) * magnetStrength;
          
          link.style.transform = `translate(${distanceX}px, ${distanceY}px)`;
        });
        
        link.addEventListener('mouseleave', () => {
          link.style.transform = 'translate(0px, 0px)';
        });
      });
    }
    
    // Add logo animation on hover - with enhanced 3D effect
    const logoContainer = document.querySelector('.premium-logo-container');
    const logoSymbolElements = document.querySelectorAll('.logo-symbol > div');
    
    if (logoContainer) {
      // Track mouse position for 3D perspective effect
      logoContainer.addEventListener('mousemove', (e) => {
        if (window.matchMedia('(prefers-reduced-motion: no-preference)').matches) {
          const bounds = logoContainer.getBoundingClientRect();
          const centerX = bounds.left + bounds.width / 2;
          const centerY = bounds.top + bounds.height / 2;
          
          // Calculate mouse position relative to center (in percentage -50 to 50)
          const percentX = ((e.clientX - centerX) / (bounds.width / 2)) * 10;
          const percentY = ((e.clientY - centerY) / (bounds.height / 2)) * 5;
          
          // Apply subtle 3D rotation based on mouse position
          logoContainer.style.transform = `perspective(1000px) rotateY(${percentX}deg) rotateX(${-percentY}deg) translateZ(10px)`;
        }
      });
      
      logoContainer.addEventListener('mouseleave', () => {
        // Reset transform when mouse leaves
        logoContainer.style.transform = 'perspective(1000px) rotateY(0deg) rotateX(0deg) translateZ(0)';
      });
      
      logoContainer.addEventListener('mouseenter', () => {
        // Animate symbol elements on hover
        logoSymbolElements.forEach((element, index) => {
          element.style.animationDelay = `${index * 0.1}s`;
          element.classList.add('hover-animate');
        });
      });
      
      logoContainer.addEventListener('mouseleave', () => {
        // Remove animation classes on mouse leave
        logoSymbolElements.forEach(element => {
          element.classList.remove('hover-animate');
        });
      });
    }
  });
</script>

